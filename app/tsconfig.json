{
  "compilerOptions": {
    "outDir": "./types/",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "jsx": "react",
    "target" : "esnext",
    "moduleResolution": "node",
    "module": "esnext",
    "skipLibCheck": true
  },
  "include": [
    "src",
    "index.d.ts"
  ]
}
